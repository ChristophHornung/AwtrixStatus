<UserControl x:Class="AwtrixStatus.TrafficLightControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:AwtrixStatus"
			 mc:Ignorable="d"
			 d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel>
		<Ellipse Name="RedLight" Width="60" Height="60" Fill="Gray" Margin="5"
				 MouseLeftButtonDown="RedLight_MouseLeftButtonDown" />
		<Ellipse Name="YellowLight" Width="60" Height="60" Fill="Gray" Margin="5"
				 MouseLeftButtonDown="YellowLight_MouseLeftButtonDown" />
		<Ellipse Name="GreenLight" Width="60" Height="60" Fill="Gray" Margin="5"
				 MouseLeftButtonDown="GreenLight_MouseLeftButtonDown" />
	</StackPanel>
</UserControl>